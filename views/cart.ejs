    <script>
        const customerData = <%- JSON.stringify(customerData) %>;
        let cartCookie = null;

        if (!customerData) {
            // Ensure cartItemsData is a string
            const cartItemsData = `<%- JSON.stringify(cartItems) %>`;

            // Check if cartItemsData is not empty and is a valid JSON string
            if (cartItemsData && cartItemsData.trim().length > 0) {
                try {
                    // Parse cartItemsData since it's stored as a string
                    cartCookie = JSON.parse(cartItemsData);
                } catch (error) {
                    console.error("Error parsing cart items data:", error);
                }
            }
        }
    </script>





