<body>

    <div class="container-fluid fixed-top section-1 ">

        <div class="container">

            <div class="nav-row py-3 row justify-content-between">
                <div class="col-md-5 justify-content-between align-items-center d-flex ">
                    <a href="/" class="text-decoration-none fs-3 text-dark fw-bold">Read.By</a>
                    <a href="/library" class="text-decoration-none text-dark ">Library</a>
                    <a href="" class="text-decoration-none text-dark ">Kid's Corner</a>
                    <ul class="menu">
                        <li class="menu-item-category text-decoration-none">
                            <button
                                class="d-flex category-btn align-items-center text-decoration-none text-dark">Categories</button>
                            <ul class="drop-menu">
                                <% mainCategories.forEach(mainCategory=> { %>
                                    <li class="drop-menu-item-category">
                                        <a href="#">
                                            <%= mainCategory.name %>
                                        </a>

                                        <ul id="nested-ul" class="nested-drop-menu"
                                            data-category-id="<%= mainCategory._id %>">



                                        </ul>
                                    </li>
                                    <% }); %>
                            </ul>
                        </li>
                    </ul>
                </div>

                <div class="col-md-5  d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center col-8 search-div">
                        <i class="bi bi-search fs-5 me-2"></i>
                        <input type="text" class="search-input w-100" placeholder="Search book...">
                    </div>
                    <a href="/cart" class="text-dark"><i class="bi bi-bag-fill fs-4"></i></a>
                    <span>|</span>
                    <% if (customer) { %>
                        <ul class="menu">
                            <li class="menu-item">
                                <a href="/account/login" class="d-flex ps-0 align-items-center "><span>Login</span></a>
                                <ul class="drop-menu">

                                    <li class="drop-menu-item">
                                        <form action="/account/logout" method="post">
                                            <button type="submit" class="btn">Logout</button>
                                        </form>
                                    </li>


                                </ul>



                            </li>
                        </ul>
                        <% }else{ %>
                            <ul class="menu">
                                <li class="menu-item">
                                    <a href="/account/login"
                                        class="d-flex ps-0 align-items-center "><span>Login</span></a>
                                    <ul class="drop-menu">
                                        <li class="drop-menu-item">
                                            <a class="" href="/account/signup">Signup</a>
                                        </li>

                                    </ul>
                                </li>
                            </ul>
                            <% } %>

                </div>

            </div>











        </div>


    </div>




    <% if (customer && customer.cart.length >0) { %>
        

        <div class="container-fluid cart-start">
            <h1 class="mb-5">Cart</h1>
            <div class="row px-5 align-items-start ">
                <div class="col-12 col-sm-8 items">
                    <!--1-->

                    <% cartItems.forEach(item=> { %>

                        <div class="cartItem row align-items-start">
                            <div class="col-3 d-flex justify-content-center mb-2">
                                <img height="200" width="150" src="/images/IMG 1.jpg" alt="art image">
                            </div>
                            <div class="col-5 mb-2">
                                <h5 class="text-dark">
                                    <%= item.title %>
                                </h5>
                                <span>
                                    <%= item.format %>,<%= item.language %>
                                </span>
                                <p class="per-price">₹<%= item.price %>
                                </p>
                                <div class="col-md-4 mb-3">
                                    <div class="qty-container">
                                        <button class="qty-btn-minus btn-dark btn-rounded mr-1" type="button"
                                            onclick="decrementQuantity(<%= cartItems.indexOf(item) %>)">
                                            <i class="bi bi-chevron-left"></i>
                                        </button>
                                        <input type="text" name="qty" value="<%= item.quantity %>"
                                            class="input-qty input-rounded"
                                            oninput="validateInput(this, <%= cartItems.indexOf(item) %>)">



                                        <button class="qty-btn-plus btn-dark btn-rounded ml-1" type="button"
                                            onclick="incrementQuantity(<%= cartItems.indexOf(item) %>)">
                                            <i class="bi bi-chevron-right"></i>
                                        </button>
                                    </div>
                                </div>

                            </div>
                            <div class="col-2">

                            </div>
                            <div class="col-2">
                                <p class="group-price">₹<%= parseInt(item.price) * parseInt(item.quantity) %>
                                </p>


                            </div>
                        </div>
                        <hr>

                        <% } ) %>





                </div>
                <div class="col-12 col-sm-4 p-3 proceed form">
