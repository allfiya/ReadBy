<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= product.title %>
    </title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Londrina+Outline&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/product_detail.css">

    <!-- Popper.js and Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>

    <!-- jQuery -->

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>




    <!-- Cart and Customer Data -->
    <script>
        const customerData = JSON.parse('<%- JSON.stringify(customer) %>');
        let cartCookie = null;

        if (!customerData) {
            const cartItemsData = '<%- JSON.stringify(cartItems) %>';
            if (cartItemsData) {
                cartCookie = JSON.parse(cartItemsData);
            }
        }



    </script>

    <!-- Script for Product Detail Page -->
    <script src="/js/product_detail.js" defer></script>





</head>


<body>

    <%- include('navbar') %>


        <div class="container-fluid    " style="min-height: 89vh; margin-top: 75px;width: 90vw;">

            <!-- PRODUCT INTRO -->


            <div class="row section-2 ">
                <div class="col-md-5 row pt-5   " style="height: 690px;">
                    <div class="col-2 ms-2 img-col   d-flex flex-column ">
                        <% for (let i=1; i < product.images.length; i++) { %>
                            <img class="side-img" src="/<%= product.images[i] %>" width="75" height="100" alt="">
                            <% } %>
                            <% if (customer) { %>
                                <div class="placement">
                                    <div class="heart"></div>
                                </div>
                                <% } %>



                    </div>


                    <figure id="magnify-area">
                        <img id="magnify-img" src="/<%= product.images[0] %>" alt="">

                    </figure>


                    



                            <!-- <img id="active-img" width="350" height="450" src="/<%= product.images[0] %>" alt=""> -->







                </div>
                <div class="col-md-7 mt-4 " style="height: 690px; overflow-y: scroll;">

                    <h3>
                        <%= product.title %>
                    </h3>
                    <div class="d-flex text-light align-items-center m-0 " style="font-size: small;">
                        <div class="bg-success  p-1 rounded">4.1<i class="bi ms-1  bi-star-fill"></i>
                        </div>

                        <span class="text-secondary ms-2">(<%= product.totalOrders %>)</span>
                    </div>
                    <div>
                        <%= product.description %>
                    </div>

                    <div class="d-flex align-items-center fs-3">
                        <span class="fw-bold me-2" id="salePrice"></span>
                        <strike class="me-2 text-secondary fs-5" id="basePrice"></strike>

                        <% if (product.discount.isActive){ %>

                            <span class="text-success fw-bold " style="font-size: medium;">15% off</span>
                            <% } %>
                    </div>

                    <% if(customer) { %>



                        <form id="addToCartForm">
                            <input type="hidden" value="<%= product._id %>" name="productId">
                            <% product.formats.forEach(function(format, index) { %>
                                <input type="radio" name="format" value="<%= format._id %>" <% if(index===0) { %>
                                checked
                                <% } %> >
                                    <label>
                                        <%= format.name %>
                                    </label>
                                    <% }) %>
                                        <br>
                                        <% product.languages.forEach(function(language, index) { %>
                                            <input type="radio" name="language" value="<%= language._id %>" <%
                                                if(index===0) { %>
                                            checked
                                            <% } %> >
                                                <label>
                                                    <%= language.name %>
                                                </label>
                                                <% }) %>
                                                    <div class="d-flex mt-4 align-items-center">
                                                        <button type="button" id="buyNowBtn"
                                                            class="btn btn-dark me-2">Buy
                                                            Now</button>

                                                        <div id="cart-status">


                                                        </div>




                                                    </div>
                        </form>



                        <% } else { %>

                            <form id="addToCookieForm">
                                <input type="hidden" id="productIdCookie" value="<%= product._id %>"
                                    name="productIdCookie">
                                <% product.formats.forEach(function(format, index) { %>
                                    <input type="radio" name="formatId" value="<%= format._id %>" <% if (index===0) { %>
                                    checked <% } %>>
                                        <label>
                                            <%= format.name %>
                                        </label>
                                        <% }) %>
                                            <br>
                                            <% product.languages.forEach(function(language, index) { %>
                                                <input type="radio" name="languageId" value="<%= language._id %>" <% if
                                                    (index===0) { %> checked
                                                <% } %>>
                                                    <label>
                                                        <%= language.name %>
                                                    </label>
                                                    <% }) %>
                                                        <div class="d-flex mt-4 align-items-center">
                                                            <button type="button" id="buyNowBtn"
                                                                class="btn btn-dark me-2">Buy Now</button>

                                                            <div id="cart-status-cookie">


                                                            </div>




                                                        </div>
                            </form>



                            <% } %>



                </div>

            </div>


            <hr style="color: black;">

            <!-- DETAIL & RATINGS & REVIEWS -->

            <div class="detail-section">

                <div class="tab">
                    <button class="tablinks active" id="One">Details</button>
                    <button class="tablinks" id="Two">Ratings & Reviews</button>


                </div>



                <!-- 1ST TAB -->

                <div id="One" class="tabcontent px-5 mt-5">

                    <h3>Details</h3>



                </div>

                <!-- 2ND TAB -->

                <div id="Two" class="tabcontent px-5 mt-5">

                    <h3>Ratings & Reviews</h3>


                </div>


            </div>


            <!-- SIMILAR BOOKS -->



            <% if(similarProducts.length>0) { %>

                <div class="row container mt-5 justify-content-">
                    <h2>Similar Books</h2>
                    <% similarProducts.forEach(function(product, index) { %>



                        <div class="col-3 product-col mb-5 mt-4">
                            <% if (customer) { %>
                                <div class="placement">
                                    <div class="heart"></div>
                                </div>
                                <% } %>
                                    <a href="/view/<%= product._id %>" class="text-decoration-none text-dark">
                                        <div class="book-card p-0 ">


                                            <div class="book-card-cover p-3 ">
                                                <div class="book-card-book">
                                                    <div class="book-card-book-front">
                                                        <img class="book-card-img" src="/images/IMG 4.jpg"
                                                            alt="Harry Potter cover">
                                                    </div>
                                                    <div class="book-card-book-back"></div>
                                                    <div class="book-card-book-side"></div>
                                                </div>
                                            </div>
                                            <div
                                                class=" p-2 d-flex rounded  flex-column justify-content-evenly top-details">
                                                <span class=" fw-bold">
                                                    <%= product.title %>
                                                </span>
                                                <span class="text-secondary mb-1"
                                                    style="font-size: small;">Science</span>

                                                <div class="d-flex text-light align-items-center m-0 "
                                                    style="font-size: small;">
                                                    <div class="bg-success  p-1 rounded">4.1<i
                                                            class="bi ms-1  bi-star-fill"></i>
                                                    </div>

                                                    <span class="text-secondary ms-2">(2516)</span>
                                                </div>

                                                <% const basePrices=Array.from(product.basePrice.values()); %>
                                                    <% const lowestBase=Math.min(...basePrices); %>
                                                        <% const highestBase=Math.max(...basePrices); %>

                                                            <% const salePrices=Array.from(product.salePrice.values());
                                                                %>
                                                                <% const lowestSale=Math.min(...salePrices); %>
                                                                    <% const highestSale=Math.max(...salePrices); %>




                                                                        <div class="d-flex align-items-center">
                                                                            <% if (lowestBase===highestBase) { %>
                                                                                <strike class="me-2 text-secondary">₹<%=
                                                                                        lowestBase %>
                                                                                </strike>
                                                                                <% }else { %>
                                                                                    <strike
                                                                                        class="me-2 text-secondary">₹<%=
                                                                                            lowestBase %>-<%=
                                                                                                highestBase %>
                                                                                    </strike>
                                                                                    <% } %>
                                                                                        <% if (lowestSale===highestSale)
                                                                                            { %>


                                                                                            <span class="fw-bold me-2">₹
                                                                                                <%= lowestSale %>
                                                                                            </span>
                                                                                            <% }else { %>
                                                                                                <span
                                                                                                    class="fw-bold me-2">₹
                                                                                                    <%= lowestSale %>-
                                                                                                        <%= highestSale
                                                                                                            %>
                                                                                                </span>


                                                                                                <% } %>

                                                                                                    <span
                                                                                                        class="text-success "
                                                                                                        style="font-size: small;">15%
                                                                                                        off</span>
                                                                        </div>




                                            </div>
                                        </div>
                                    </a>
                        </div>



                        <% }) %>
                </div>

                <% } %>


        </div>



        <!-- Zoom effect -->




        <script>


        </script>






</body>

</html>