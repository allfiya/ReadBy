<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= product.title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Londrina+Outline&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Londrina+Outline&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/product_detail.css">
    <script src="/js/product_detail.js" defer></script>

</head>

<body>

    <div class="container-fluid fixed-top section-1 ">

        <div class="container">

            <div class="nav-row py-3 row justify-content-between">
                <div class="col-md-5 justify-content-between align-items-center d-flex ">
                    <a href="/" class="text-decoration-none fs-3 text-dark fw-bold">Read.By</a>
                    <a href="/library" class="text-decoration-none text-dark ">Library</a>
                    <a href="" class="text-decoration-none text-dark ">Kid's Corner</a>
                    <ul class="menu">
                        <li class="menu-item-category text-decoration-none">
                            <button
                                class="d-flex category-btn align-items-center text-decoration-none text-dark">Categories</button>
                            <ul class="drop-menu">
                                <% mainCategories.forEach(mainCategory=> { %>
                                    <li class="drop-menu-item-category">
                                        <a href="#">
                                            <%= mainCategory.name %>
                                        </a>

                                        <ul id="nested-ul" class="nested-drop-menu"
                                            data-category-id="<%= mainCategory._id %>">



                                        </ul>
                                    </li>
                                    <% }); %>
                            </ul>
                        </li>
                    </ul>
                </div>

                <div class="col-md-5  d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center col-8 search-div">
                        <i class="bi bi-search fs-5 me-2"></i>
                        <input type="text" class="search-input w-100" placeholder="Search book...">
                    </div>
                    <a href="/cart" class="text-dark"><i class="bi bi-bag-fill fs-4"></i></a>
                    <span>|</span>
                    <% if (customer) { %>
                        <ul class="menu">
                            <li class="menu-item">
                                <a href="/account/login" class="d-flex ps-0 align-items-center "><span>Login</span></a>
                                <ul class="drop-menu">

                                    <li class="drop-menu-item">
                                        <form action="/account/logout" method="post">
                                            <button type="submit" class="btn">Logout</button>
                                        </form>
                                    </li>


                                </ul>



                            </li>
                        </ul>
                        <% }else{ %>
                            <ul class="menu">
                                <li class="menu-item">
                                    <a href="/account/login"
                                        class="d-flex ps-0 align-items-center "><span>Login</span></a>
                                    <ul class="drop-menu">
                                        <li class="drop-menu-item">
                                            <a class="" href="/account/signup">Signup</a>
                                        </li>

                                    </ul>
                                </li>
                            </ul>
                            <% } %>

                </div>

            </div>











        </div>


    </div>


    <div class="container-fluid    " style="min-height: 89vh; margin-top: 75px;width: 90vw;">
        <div class="row section-2 ">
            <div class="col-md-5 row pt-5  " style="height: 690px;">
                <div class="col-2 ms-2  d-flex flex-column ">
                    <img class="active side-img" src="/images/IMG 1.jpg" alt="">
                    <img class="side-img" src="/images/IMG 2.jpg" width="75" height="100" alt="">
                    <img class="side-img" src="/images/IMG 3.jpg" width="75" height="100" alt="">
                    <img class="side-img" src="/images/IMG 4.jpg" width="75" height="100" alt="">
                    <img class="side-img" src="/images/IMG 5.jpg" width="75" height="100" alt="">


                </div>
                <div class="col-9 img-col ms-3 d-flex justify-content-  ">
                    <img class="active" src="/images/IMG 1.jpg" alt="" style="width: 75%; height: 75%;">
                    <% if (customer) { %>
                        <div class="placement">
                            <div class="heart"></div>
                        </div>
                        <% } %>

                </div>
                <!-- <div class="d-flex">
                    <a href=""><button>Add to Bag</button></a>
                    <a href=""><button>Buy Now</button></a>
                </div> -->



            </div>
            <div class="col-md-7 mt-4 " style="height: 690px; overflow-y: scroll;">

                <h3>
                    <%= product.title %>
                </h3>
                <div class="d-flex text-light align-items-center m-0 " style="font-size: small;">
                    <div class="bg-success  p-1 rounded">4.1<i class="bi ms-1  bi-star-fill"></i>
                    </div>

                    <span class="text-secondary ms-2">(2516)</span>
                </div>
                <div>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Dolore esse dolor expedita veritatis
                    tempora, necessitatibus cumque quas, ipsa accusantium optio, eum asperiores voluptatem quibusdam a
                    quo voluptates nisi. Ducimus, dolore! Lorem ipsum dolor, sit amet consectetur adipisicing elit.
                    Reprehenderit alias accusamus labore vel, numquam iusto. Fuga quos possimus quidem eos, officia,
                    quaerat nesciunt repudiandae harum maxime quisquam tempore mollitia obcaecati.</div>

                <div class="d-flex align-items-center fs-3">
                    <span class="fw-bold me-2">₹275-350</span>
                    <strike class="me-2 text-secondary fs-5">₹350-450</strike>

                    <span class="text-success fw-bold " style="font-size: medium;">15% off</span>
                </div>

                <form action="/add-to-cart" method="post">


                    <div class="format-container row">

                        <div class="col-2">Format</div>

                        <div class="col">

                            <% product.formats.forEach(function(format, index) { %>

                                <input id="<%= format.name %>" value="<%= format.name %>" checked name="format" type="radio">
                                <input id="<%= format._id %>" value="<%= format._id %>" checked name="formatId" type="hidden">
                                <label for="<%= format.name %>">
                                    <%= format.name %>
                                </label>

                                <% } ) %>




                        </div>





                    </div>

                    <div class="language-container row">

                        <div class="col-2">Language</div>

                        <div class="col">
                            <% product.languages.forEach(function(language, index) { %>

                                <input id="<%= language.name %>" value="<%= language.name %>" checked name="language" type="radio">
                                <label for="<%= language.name %>">
                                    <%= language.name %>
                                </label>

                                <% } ) %>

                        </div>

                    </div>

                    <input type="hidden" name="product" value="<%= product._id %>">
                    
                    




                    <div class="d-flex ">
                        <a href=""><button class="btn btn-dark">Buy Now</button></a>

                        <button class="btn btn-dark ms-3" type="submit">Add to Cart</button>

                    </div>
                </form>



            </div>

        </div>




    </div>





</body>

</html>

