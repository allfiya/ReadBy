            <form id="signupForm" action="" class=" sub col-12  p-4 " method="post">

              <h2 class="poetsen-one-regular">SIGNUP</h2>
              <div class="mb-2 mt-4 col-12 login-input-div d-flex align-items-center ">
                <i class="bi fs-4 bi-person-vcard"></i>
                <input placeholder="First name" type="text" name="first_name" required class="login-input ps-2"
                  id="first_name">
              </div>
              <p id="firstNameError" class="text-danger my-1" style="font-size: small;"></p>

              <div class="mb-2 col-12 login-input-div d-flex align-items-center ">
                <i class="bi fs-4 bi-person-vcard"></i>
                <input placeholder="Last name (Optional)" type="text" name="last_name" required class="login-input ps-2"
                  id="last_name">
              </div>
              <p id="lastNameError" class="text-danger my-1" style="font-size: small;"></p>


              <div class="mb-2 col-12 login-input-div d-flex align-items-center ">
                <i class="bi fs-4 bi-envelope"></i>
                <input placeholder="Email" type="email" name="email" required class="login-input ps-2" id="email">
              </div>
              <p id="emailError" class="text-danger my-1" style="font-size: small;"></p>

              <div class="mb-2 col-12 login-input-div d-flex align-items-center ">
                <i class="bi fs-4 bi-person"></i>
                <input placeholder="Username" type="text" name="username" required class="login-input ps-2"
                  id="username">
              </div>
              <p id="usernameError" class="text-danger my-1" style="font-size: small;"></p>

              <div class="mb-2 col-12 login-input-div d-flex align-items-center">
                <i class="bi fs-4 bi-lock"></i>
                <input placeholder="Create password" type="password" name="password1" required class="login-input ps-2"
                  id="password1">
              </div>
              <div class="mb-2 col-12 login-input-div d-flex align-items-center">
                <i class="bi fs-4 bi-lock"></i>
                <input placeholder="Confirm password" type="password" name="password2" required class="login-input ps-2"
                  id="password2">
              </div>

              <p id="passwordError" class="text-danger my-1" style="font-size: small;"></p>


              <div class="d-flex flex-column align-items-center">

              <button id="submitSignupForm" type="button" class="button login-btn mt-4 ">
                Send OTP
                <svg fill="currentColor" viewBox="0 0 24 24" class="icon">
