  <link rel="stylesheet" href="/css/login.css">
  <script src="/js/login.js" defer></script>

  <style>


  </style>


</head>

<body>




  <div class="container-fluid main  d-flex justify-content-center align-items-center">


    <div class="container d-flex justify-content-center p-5 ">

      <div class="row col-10  login-row" style="min-height: 85vh;">
        <div class="col-md-6 img-col p-0">
          <img src="/images/login img 2.png" class="img" alt="">

        </div>

        <div class="col-md-6 d-flex flex-column py-4 px-5">

          <h5 class="poetsen-one-regular text-end ">Readby.</h5>


          <div class="d-flex h-100 align-items-center">


          <form  action="" method="post" id="loginForm" class=" sub  p-4 col-12  " >

            <h3 class="poetsen-one-regular">Login</h3>

            <div class=" d-flex mb-2 align-items-center mt-4 col-12 login-input-div  ">
              <i class="bi fs-4 bi-person "></i>
              <input type="text"   name="email" placeholder="Email / Username" class=" login-input ps-2  "
                id="emailOrUsername">
                <!-- autocomplete="off" -->
            </div>

            <p  id="emailError" class="text-danger my-1" style="font-size: small; "></p>
            
            <div class=" d-flex  align-items-center col-12 login-input-div ">
              <i class="bi fs-4 bi-lock"></i>
              <input placeholder="Password" type="password" name="password" class="login-input ps-2 " id="password">
            </div>

            <p id="passwordError" class="text-danger my-1" style="font-size: small;"></p>


            <div class="d-flex mt-2 justify-content-end">

            <a href="/account/forgot-password" class="text-dark ">forgot password?</a>

          </div>


            <div class="d-flex flex-column align-items-center">

            <button id="submitLoginForm" type="button"  class="button login-btn mt-4 ">
              Login
              <svg fill="currentColor" viewBox="0 0 24 24" class="icon">
                <path clip-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm4.28 10.28a.75.75 0 000-1.06l-3-3a.75.75 0 10-1.06 1.06l1.72 1.72H8.25a.75.75 0 000 1.5h5.69l-1.72 1.72a.75.75 0 101.06 1.06l3-3z" fill-rule="evenodd"></path>
              </svg>
            </button>

            <span class="mt-3">Don't have an account?&nbsp;<a href="/account/signup">Signup</a></span>

            

          </div>

          

          
          </form>

         </div>




        </div>

      </div>


    </div>



  </div>



 






</body>

</html>